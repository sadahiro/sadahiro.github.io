(************************************************************)
procedure CountQueue (var Queue: QueueType; var count: integer);
	var
		TQ: QueueType;
		item: QElementType;
begin
	count := 0;
	CreateQueue(TQ);
	while Queue.Front <> nil do
		begin
			OutQueue(Queue, item);
			InQueue(TQ, item);
			count := count + 1;
		end;				{while}
	Queue := TQ;
	DestroyQueue(TQ);
end;