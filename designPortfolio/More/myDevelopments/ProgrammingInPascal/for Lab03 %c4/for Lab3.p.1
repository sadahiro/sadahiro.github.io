program Lab3;								{Working Basic Version 1.1}

	var
		inchin: integer;

begin
	writeln('unit converter menu');
	writeln('you have 3 choices');
	writeln('                     1-convert to yards, feet, inches');
	writeln('                     2-convert to centimeters');
	writeln('                     3-area of circle from your input of radius');
	writeln('this only culculates positive integers');
	writeln('give me a input as positive integer');
	writeln;
	readln(inchin);

	while (inchin <> -9) do					{beginning exeloop}
		begin
			inchin := abs(inchin);					{reinitialize inchin}

			while (inchin = 1) do					{beginning loop1}
				begin
					writeln('your choice is no1  converting inches to yards, feet, inches');
					writeln('give me an input as a positive integer');
					writeln;
					writeln('-2=choice 2,  -3=  choice 3,  -9=  quit');
					readln(inchin);
					if (inchin <> -2) and (inchin <> -3) and (inchin <> -9) then
						begin
							if (inchin >= 0) then
								begin
									writeln('your input is ', inchin);
									writeln;
									writeln('the converted value is ');
									writeln('                                 ', (inchin div 36) : 0, ' yards');
									writeln('                                 ', (inchin mod 36 div 12) : 0, ' feet');
									writeln('                                 ', (inchin mod 36 mod 12) : 0, ' inches');
									writeln
								end
							else
								begin
									writeln('your input is negative!');
									writeln
								end;
							inchin := 1
						end
				end;										{end loop1}

			while (inchin = 2) do					{beginning loop 2}
				begin
					writeln('your choice is no2  converting inches to centimeters');
					writeln('give me an input as a positive integer');
					writeln;
					writeln('-1=choice 1,  -3=  choice 3,  -9=  quit');
					readln(inchin);
					if (inchin <> -1) and (inchin <> -3) and (inchin <> -9) then
						begin
							if (inchin >= 0) then
								begin
									writeln('your input is ', inchin);
									writeln;
									writeln('the converted value is ');
									writeln('                            ', ((trunc(inchin * 2.54)) div 100), ' meters');
									writeln('                            ', (((trunc(inchin * 2.54)) mod 100) + ((inchin * 2.54) - (trunc(inchin * 2.54)))) : 0 : 3, ' centimeters');
									writeln((inchin * 2.54) : 0 : 3);
									writeln
								end
							else
								begin
									writeln('your input is negative!');
									writeln
								end;
							inchin := 2
						end
				end;										{end loop 2}

			while (inchin = 3) do					{beginning loop 3}
				begin
					writeln('your choice is no3  solution for the area of circle');
					writeln('give me an input as a positive integer');
					writeln;
					writeln('-1=choice 1,  -2=  choice 2,  -9=  quit');
					readln(inchin);
					if (inchin <> -1) and (inchin <> -2) and (inchin <> -9) then
						begin
							if (inchin >= 0) then
								begin
									writeln('your input is ', inchin);
									writeln;
									writeln('the area of circle is ', (inchin * inchin * pi) : 0 : 3, ' square inches');
									writeln
								end
							else
								begin
									writeln('your input is negative!');
									writeln
								end;
							inchin := 3
						end
				end										{end loop 3}
		end;											{end exeloop}

	writeln;										{quitting message}
	writeln('quitting execution,  return let you go back to TP screen');
	readln
end.